# AWS credentials (required for Bedrock)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
# Optional: session token for temporary credentials
# AWS_SESSION_TOKEN=

# Bedrock region and Mistral model
BEDROCK_REGION=us-east-1
MISTRAL_MODEL_ID=mistral.mistral-large-2402-v1:0

# Optional: direct Mistral API fallback when Bedrock fails
# MISTRAL_API_KEY=your_mistral_api_key

# Optional: enable Strands Swarm for policy debate (USE_STRANDS_AGENTS=1)
USE_STRANDS_AGENTS=1
# STRANDS_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0

# Fast simulation: skip LLM per agent so rounds finish in seconds (1=fast, 0=real LLM)
USE_FAST_SIMULATION=1

# Debug: log Bedrock errors and re-raise (BEDROCK_DEBUG=1)
# BEDROCK_DEBUG=0
