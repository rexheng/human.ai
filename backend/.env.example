# AWS credentials for Bedrock (optional for local fallback mode)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=

# Legacy names (optional)
# AWS_ACCESS_KEY=your_access_key_here
# AWS_SECRET_KEY=your_secret_key_here

# Bedrock region and model
BEDROCK_REGION=us-east-1
MISTRAL_MODEL_ID=mistral.mistral-large-2402-v1:0

# Optional direct Mistral fallback (used if Bedrock is unavailable)
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_CHAT_MODEL=mistral-large-latest

# Optional Strands agent path (if strands-agents is installed)
USE_STRANDS_AGENTS=1
STRANDS_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0
